<p id="notice"><%= notice %></p>

<h1>Listing Ports</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Type</th>
      <th>Number</th>
      <th>Signal type</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ports.each do |port| %>
      <tr>
        <td><%= port.location %></td>
        <td><%= port.type %></td>
        <td><%= port.number %></td>
        <td><%= port.signal_type %></td>
        <td><%= port.name %></td>
        <td><%= link_to 'Show', port %></td>
        <td><%= link_to 'Edit', edit_port_path(port) %></td>
        <td><%= link_to 'Destroy', port, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Port', new_location_port_path(@location) %>
